<h1>House listings</h1>
<table class="table table-bordered">
  <tr>
    <th>Living Area</th>
    <th>Dwelling Type</th>
    <th> Style</th>
    <th>Square Footage</th>
    <th>Bedrooms</th>
    <th>Bathrooms</th>
    <th>Year Built</th>
    <th></th>
    <th></th>
    <th></th>


  </tr>

<% @houses.each do |house| %>
  <tr>
    <td><%= house.living_area%></td>
    <td><%= house.dwelling_type%></td>
    <td><%= house.style%></td>
    <td><%= house.square_footage%></td>
    <td><%= house.bedrooms%></td>
    <td><%= house.bathrooms%></td>
    <td><%= house.year_built%></td>

    <td><%= link_to 'Show', house, :class => "btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_house_path(house) %></td>
    <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New House', new_house_path, :class => "btn btn-success" %>